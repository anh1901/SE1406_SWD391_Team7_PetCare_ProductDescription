<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btSensor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sensor"
        android:gravity="center"
        android:onClick="clickToSensor"
        />
    <Button
    android:id="@+id/btBluetooth"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Bluetooth"
    android:gravity="center"
    android:onClick="clickToBluetooth"
    />
    <Button
        android:id="@+id/btCamera"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:gravity="center"
        android:onClick="clickToCamera"
        />
    <Button
        android:id="@+id/btCameraAPI"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Camera API"
        android:gravity="center"
        android:onClick="clickToCameraAPI"
        />

</LinearLayout>